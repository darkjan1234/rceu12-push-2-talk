<?xml version="1.0" encoding="utf-8"?>
<com.zello.ui.ScrollViewEx android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:padding="@dimen/emergency_countdown_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@id/countdownView" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.zello.ui.ImageViewEx android:id="@id/countdownIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" />
            <TextView android:layout_gravity="center" android:id="@id/countdownTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?emergencyCountdownTextViewStyle" />
        </FrameLayout>
        <TextView android:id="@id/countdownReverseTextView" android:layout_width="fill_parent" android:layout_height="wrap_content" style="?normalTextStyle" />
        <Button android:id="@id/sendButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/emergency_countdown_margin" style="?buttonSquareSolidRedStyle" />
        <Button android:id="@id/cancelButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/large_padding" style="?buttonStyle" />
    </LinearLayout>
</com.zello.ui.ScrollViewEx>