<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/notification_ptt_color_face" />
        </shape>
    </item>
    <item android:left="@dimen/notification_ptt_border" android:top="@dimen/notification_ptt_border" android:right="@dimen/notification_ptt_border" android:bottom="@dimen/notification_ptt_border">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="@dimen/notification_ptt_ring" android:color="@color/notification_ptt_ring_idle" />
        </shape>
    </item>
    <item android:left="@dimen/notification_ptt_border" android:top="@dimen/notification_ptt_border" android:right="@dimen/notification_ptt_border" android:bottom="@dimen/notification_ptt_border">
        <rotate android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="oval">
                <solid android:color="#00000000" />
                <stroke android:width="@dimen/notification_ptt_ring" android:color="@color/notification_ptt_ring_recording" android:dashWidth="@dimen/notification_ptt_ring_dash_width" android:dashGap="@dimen/notification_ptt_ring_dash_gap" />
            </shape>
        </rotate>
    </item>
</layer-list>