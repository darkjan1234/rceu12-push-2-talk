<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/selector_background_pressed_dark"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#ff000000" />
            <corners android:radius="@dimen/button_filter_corner_radius" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_filter_selected_dark" />
                    <corners android:radius="@dimen/button_filter_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_filter_normal_dark" />
                    <corners android:radius="@dimen/button_filter_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>